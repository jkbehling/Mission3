@{
    ViewData["Title"] = "Grade Calculator";
}

@model Calculator;

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <br />
        <h3>Grade Calculator:</h3>
        <p>Fill out form with numbers in range 0 to 100</p>
        <form method="post">
            <label>Assignments:</label>
            <input id="ass" asp-for="assign" type="number"/><br />
            <label>Group Projects:</label>
            <input id="gp" asp-for="gp" type="number"/><br />
            <label>Quizes:</label>
            <input id="quizes" asp-for="quizes" type="number"/><br />
            <label>Exams:</label>
            <input id="exams" asp-for="exams" type="number"/><br />
            <label>INTEX:</label>
            <input id="INTEX" asp-for="INTEX" type="number"/><br />
            <br /><input id="submit" type="submit" value="submit" />
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>


